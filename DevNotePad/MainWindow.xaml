<Window x:Class="DevNotePad.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DevNotePad"
        mc:Ignorable="d"
        Title="Dev NotePad" Height="450" Width="800"
        DataContext="{Binding Source={StaticResource bootstrap},Path=Main}"
        Loaded="Window_Loaded">
    <DockPanel LastChildFill="True">
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="File">
                <MenuItem Header="New" Command="{Binding Path=New}"/>
                <MenuItem Header="Open" Command="{Binding Path=Open}"/>
                <MenuItem Header="Save" Command="{Binding Path=Save}"/>
                <MenuItem Header="Save As" Command="{Binding Path=SaveAs}" />
                <Separator/>
                <MenuItem Header="Close"/>
            </MenuItem>
            <MenuItem Header="Edit">
                <MenuItem Header="Cut"/>
                <MenuItem Header="Copy"/>
                <MenuItem Header="Paste"/>
                <MenuItem Header="Duplicate"/>
                <Separator/>
                <MenuItem Header="Find"/>
                <MenuItem Header="Find Next"/>
                <MenuItem Header="Replace"/>
                <MenuItem Header="Replace All"/>
                <Separator/>
                <MenuItem Header="Select All"/>

            </MenuItem>
            <MenuItem Header="Tools">
                <MenuItem IsEnabled="False" Header="JSON Parser"/>
                <MenuItem IsEnabled="False" Header="JSON Formatter"/>
                <MenuItem IsEnabled="False" Header="XML Parser"/>
                <MenuItem IsEnabled="False" Header="XML Formatter"/>
                <MenuItem IsEnabled="False" Header="Hex String Parser"/>
                <MenuItem IsEnabled="False" Header="Hex String Formatter"/>
            </MenuItem>
            <MenuItem Header="Layout">
                <MenuItem IsEnabled="false" Header="Scrollbar always visible"></MenuItem>
                
            </MenuItem>
            <MenuItem Header="Help">
                <MenuItem Header="About"/> 
            </MenuItem>
        </Menu>

        <ToolBar DockPanel.Dock="Top">
            <Label>Filename:</Label>
            <Label Content="{Binding Path=FileName}"/>
        </ToolBar>

        
        <StatusBar DockPanel.Dock="Bottom">
            <Label>Basic Features</Label>
        </StatusBar>
        
        

        <TextBox AcceptsReturn="True" AcceptsTab="True" HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Visible" Text="{Binding Path=Text,Mode=TwoWay}"></TextBox>
        
        
    </DockPanel>
</Window>
